{
  "name": "mgfx-analyzer-gui",
  "private": true,
  "version": "1.4.0",
  "description": "A Desktop client for analyzing mgFx applications",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts .",
    "make:deb": "yarn make --targets @electron-forge/maker-deb",
    "make:dmg": "yarn make --targets @electron-forge/maker-dmg"
  },
  "keywords": [],
  "author": {
    "name": "Warren Seymour",
    "email": "warren@fountainhead.tech"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/main_window.html",
                  "js": "./src/main_window.tsx",
                  "name": "main_window"
                }
              ]
            },
            "loggerPort": "9001"
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.50",
    "@electron-forge/maker-deb": "6.0.0-beta.50",
    "@electron-forge/maker-dmg": "^6.0.0-beta.51",
    "@electron-forge/maker-rpm": "6.0.0-beta.50",
    "@electron-forge/maker-squirrel": "6.0.0-beta.50",
    "@electron-forge/maker-zip": "6.0.0-beta.50",
    "@electron-forge/plugin-webpack": "6.0.0-beta.50",
    "@hot-loader/react-dom": "^16.13.0",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@mgfx/analyzer-gui-common": "^0.2.0",
    "@mgfx/analyzer-http-client": "^0.3.40",
    "@types/classnames": "^2.2.10",
    "@types/electron-devtools-installer": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "css-loader": "^3.0.0",
    "electron": "8.1.1",
    "electron-devtools-installer": "^3.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^5.1.1",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.0",
    "eventsource": "^1.0.7",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "node-loader": "^0.6.0",
    "react-hot-loader": "^4.12.20",
    "sass-loader": "^8.0.2",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.2.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.7.0",
    "worker-plugin": "^4.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
