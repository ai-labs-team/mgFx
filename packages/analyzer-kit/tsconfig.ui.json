{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "module": "esNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "ui/*": ["src/ui/*"]
    },
    "lib": [
      "es2019"
    ]
  },
  "include": ["src/ui/**/*"]
}
